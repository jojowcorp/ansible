            <head>
              <title>Apache Web Server on SUSE Linux</title>
            </head>
            <body>
              <h1>Apache web server running on SUSE Linux</h1>
            </body>
          </html>
        dest: /var/www/html/index.html

    - name: Restart Apache
      service:
        name: apache2
