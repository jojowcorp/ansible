# Exercice

cd ~/formation-ansible/atelier-10
vagrant up 
vagrant ssh ansible
cd ansible/projets/ema/
ls -l
cd playbooks/
nano apache-debian.yml

## COntenu dans le fichier apache-debian.yml :
- hosts: all
  become: yes

  tasks:
    - name: Install Apache
      apt:
        name: apache2
        state: present

    - name: creation custom index.html
      copy:
        content: |
          <html>
            <head>
              <title>Apache Web Server on Debian</title>
            </head>
            <body>
              <h1>Apache web server running on Debian Linux</h1>
            </body>
          </html>
        dest: /var/www/html/index.html

    - name: Restart Apache
      service:
        name: apache2
        state: restarted

...

-----------------
nano apache-rocky.yml

## Contenu dans le fichier apache-rocky.yml : 

- hosts: all
  become: yes

  tasks:
    - name: Install Apache
      yum:
        name: httpd
        state: present

    - name: Create custom index.html
      copy:
        content: |
          <html>
            <head>
              <title>Apache Web Server on Rocky Linux</title>
            </head>
            <body>
              <h1>Apache web server running on Rocky Linux</h1>
            </body>
          </html>
        dest: /var/www/html/index.html

    - name: Restart Apache
      service:
        name: httpd
        state: restarted

...

-------------

nano apache-suse

## Contenu dans le fichier apache-suse.yml :

- hosts: all
  become: yes

  tasks:
    - name: Install Apache
      zypper:
        name: apache2
        state: present

    - name: Create custom index.html
      copy:
